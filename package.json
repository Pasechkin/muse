{
  "name": "tailwind-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "postcss ./src/input.css -o ./src/css/output.css --watch",
    "build:once": "postcss ./src/input.css -o ./src/css/output.css",
    "copy-css": "node -e \"const fs=require('fs');const path=require('path');const d='src/html/css';if(!fs.existsSync(d))fs.mkdirSync(d,{recursive:true});['output.css','page-info.css'].forEach(f=>{const src=path.join('src/css',f);if(fs.existsSync(src))fs.copyFileSync(src,path.join(d,f))});\"",
    "dev": "npm run build",
    "preview": "npm run build:once && npm run copy-css && npx http-server src/html -p 3000",
    "preview:mobile": "npm run build:once && npm run copy-css && npx http-server src/html -p 3000 -a 0.0.0.0 --cors"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "cssnano": "^7.0.6",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "svg-path-bounds": "^1.0.2",
    "svgo": "^4.0.0",
    "tailwindcss": "^4.1.18",
    "terser": "^5.46.0"
  },
  "dependencies": {
    "@tailwindplus/elements": "^1.0.22"
  }
}
