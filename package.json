{
  "name": "tailwind-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "postcss ./src/input.css -o ./src/css/output.css --watch",
    "build:once": "postcss ./src/input.css -o ./src/css/output.css",
    "copy-css": "node -e \"const fs=require('fs');const path=require('path');if(!fs.existsSync('src/html/css'))fs.mkdirSync('src/html/css',{recursive:true});fs.copyFileSync('src/css/output.css','src/html/css/output.css');\"",
    "dev": "npm run build",
    "preview": "npm run build:once && npm run copy-css && npx http-server src/html -p 3000",
    "preview:mobile": "npm run build:once && npm run copy-css && npx http-server src/html -p 3000 -a 0.0.0.0 --cors"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "svg-path-bounds": "^1.0.2",
    "svgo": "^4.0.0",
    "tailwindcss": "^4.1.18"
  }
}
